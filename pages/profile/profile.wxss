/* pages/profile/profile.wxss */
.profile-header {
  display: flex;
  padding: 10px;
  margin: 10px;
  justify-content: center;
  align-items: center;
}

.profile-text {
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 40rpx;
  color: #406343;
  margin-bottom: 10rpx;
}

.avatar-large {
  width: 70px;
  height: 70px;
  border-radius: 50%;
  margin-right: 40rpx;
  border: 2px solid #18191F;
}

.add-btn {
  background-color: #D8E9A8;
  color: #406343;
  border: 1px solid #18191F;
  box-shadow: 0px 4px 0px #18191F;
}

.lists {
  display: flex;
  justify-content: center;
}

.lists .list {
  padding: 80rpx;
}

.list-name {
  color: #406343;
  font-size: 40rpx;
}