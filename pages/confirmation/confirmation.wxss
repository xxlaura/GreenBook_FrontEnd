/* pages/confirmation/confirmation.wxss */

.header {
  margin: 50rpx;
}

.h1 {
  font-size: 50rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif
}

.personal-card {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  padding-left: 20rpx;
  height: 300rpx;
  border: 5rpx solid #18191F;
  box-sizing: border-box;
  box-shadow: 3rpx 3rpx 1px green;
  border-radius: 32rpx;
  align-items: center; 
  margin: 50rpx
}

.h2 {
  font-size: 25rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.profile-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 180rpx;
  margin-right: 10rpx;
}
