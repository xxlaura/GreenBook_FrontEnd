/* pages/landing/landing.wxss */
.page {
  margin: 25rpx;
}

.header{
  display: flex;
  align-items: center;
}

.slogan {
  width: 70%;
}

.add-btn {
  background-color: #D8E9A8;
  border-radius: 50%;
}

.search-bar {
  display: flex;
  margin-top: 10rpx;
  border: 2px solid #18191F;
  box-sizing: border-box;
  border-radius: 32rpx;
  align-items: center;
  padding: 20rpx;
  box-shadow: 0px 4px 0px #18191F;
}

.category-box {
  display: flex;
  margin-top: 30rpx;
  text-align: center;
  scroll-behavior: smooth;
  width: 100%;
  height: 300rpx;
  white-space: nowrap;  
}

.category-card {
  display: inline-block;
  padding: 10rpx;
  margin-right: 10rpx;
}

.category-photo {
  width: 180rpx;
  height: 180rpx;
  border-radius: 15rpx;
}

.personal-card {
  display: flex;
  margin-top: 20px;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  padding-left: 10rpx;
  height: auto;
  border: 2px solid #18191F;
  box-sizing: border-box;
  box-shadow: 0px 4px 0px #18191F;
  border-radius: 32rpx;
  align-items: center; 
}

.item-cards {
  position: relative;
  display: flex;
  align-content: center;
  text-align: center;
  overflow: auto;
}

.card-category {
  border: 2px solid #18191F;
  /* box-shadow: 0px 4px 0px #18191F; */
  box-sizing: border-box;
  border-radius: 32rpx;
  margin-left: 10rpx;
  position: relative;
  width: 250rpx;
}

.item-photo {
  width: 150rpx;
  height: 150rpx;
  margin: 10rpx;
  border-radius: 20rpx;
}

.avatar-large {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  border: 2px solid #18191F;
}

.profile-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 180rpx;
  margin-right: 10rpx;
}
