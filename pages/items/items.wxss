.btn-flat {
  font-family: Comfortaa;
  flex-direction: column;
  color: black;
  padding: 8px 24px;
  border-radius: 10px;
  font-weight: bold;
  vertical-align: middle;
  background: linear-gradient(white, white);
  transition: background 0.3s ease;
  border: 3px solid rgb(145, 177, 103);
  width: 30px;
  height: 1.3em;
  margin-left: 15%;
  margin-bottom: 20px;
}

.btn-flat:hover {
  background: rgb(145, 177, 103);
  color: white;
}

