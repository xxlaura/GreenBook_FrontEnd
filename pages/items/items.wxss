.btn-flat {
  font-family: Comfortaa;
  flex-direction: column;
  color: black;
  padding: 8px 24px;
  border-radius: 10px;
  font-weight: bold;
  background: linear-gradient(white, white);
  transition: background 0.3s ease;
  border: 3px solid rgb(145, 177, 103);
  width: 30px;
  height: 2.3em;
  line-height: 2.3;
  margin-left: 15%;
  margin-bottom: 10px;
}

.btn-flat:hover {
  background: #1BCB7F;
  color: white;
}

.btn-gradient {
  font-family: Comfortaa;
